  <Config Name="Configuration Storage Path" Target="/opt/btdex/.config/btdex" Default="" Mode="rw" Description="BTDEX Configuration Path" Type="Path" Display="always" Required="true" Mask="false" />
  <Config Name="Plot Storage Path" Target="/opt/btdex/plots" Default="" Mode="rw" Description="Signum Plot Path" Type="Path" Display="always" Required="false" Mask="false" />
  <Config Name="Cache Storage Path" Target="/opt/btdex/cache" Default="" Mode="rw" Description="Signum Cache Path" Type="Path" Display="always" Required="false" Mask="false" />
