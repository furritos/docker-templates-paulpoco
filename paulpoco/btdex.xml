<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/paulpoco/docker-templates/master/paulpoco/btdex.xml</TemplateURL>
  <Beta>True</Beta>
  <Category>Crypto:</Category>
  <Date>2022-03-04</Date>
  <Changes>
    2022.02.28
    - Initial release
    
    2022.03.01
    - Fixed grammatical errors
    - Fixed default values on the volume
    - Removed optional port 5900
    
    2022.03.01
    - reformat change log
    - word change lof already included
    
    2022.03.04
    - add noVNC web browser and firefox for opening links
  </Changes>
  <Project>https://btdex.trade/</Project>
  <Name>btdex</Name>
  <Description>This is a Docker container for BTDEX based on jlesage/docker-baseimage-gui Docker image.  </Description>
  <Overview>This is a Docker container for BTDEX based on jlesage/docker-baseimage-gui Docker image.   </Overview>
  <Support>https://github.com/furritos/docker-btdex/tree/novnc-feature</Support>
  <Registry>https://hub.docker.com/r/furritos/docker-btdex:novnc-feature</Registry>
  <GitHub>https://github.com/furritos/docker-btdex/tree/novnc-feature</GitHub>
  <Repository>furritos/docker-btdex:novnc-feature</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5800</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/btdex/config</HostDir>
      <ContainerDir>/opt/btdex/.config/btdex</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/Media</HostDir>
      <ContainerDir>/opt/btdex/plots</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/btdex/cache</HostDir>
      <ContainerDir>/opt/btdex/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:8080]</WebUI>
  <Banner></Banner>
  <Icon>https://github.com/paulpoco/docker-templates/raw/master/paulpoco/images/btdex.png</Icon>
  <ExtraParams></ExtraParams>
</Containers> 
